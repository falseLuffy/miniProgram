/**index.wxss**/
.container{
  height: calc(100% - 20rpx);
}
.con {
  margin: 0 20rpx 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 4px;
}
.ad .text{
  margin-left: 20px;
}
.wrap{
  padding: 20rpx;
}
.ad{
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  background: #c3bdb2;
  height: 100rpx;
}
.ad .ad-image{
  margin-right: 10px;
  justify-content:flex-end;
  width: 50px;
  height: 50px;
}
.text{
    font-size:8px;
}
.head{
  border-bottom: 1px solid #e8e8e8;
  line-height: 2;
  padding-left: 10px;
}
.head-text{
  font-size: 14px;
  vertical-align: middle
}
.meal{
  font-size: 14px;
}
.meal-head{
  margin-top: 5px;
  line-height: 2;
  border-bottom: 1px solid #e8e8e8;
  font-weight: 600;
}
.meal-list{
  line-height: 2;
  padding: 10px 5px;
  color: #333;
}
.meal-list .list{
  font-size: 14px;
}
.meal-list .list .label{
  font-weight: 600;
  width: 200px;
}
.meal-list .list .value{
  color: #666;
}
